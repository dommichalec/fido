<h1>Displaying <%= pluralize(@campaigns.size, 'campaign') %></h1>
<% @campaigns.each do |campaign| %>
  <h2><%= link_to(campaign.title, campaign_path(campaign.id)) %></h2>
  <p><%= campaign.description %></p>
  <p><%= number_to_currency(campaign.amount_needed) %></p>
  <p><%= campaign.medical_partner %></p>
<% end %>
